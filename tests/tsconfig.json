{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@arteria/engine": ["../packages/engine/src/index.ts"]
        }
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
}
